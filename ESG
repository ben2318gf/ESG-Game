   const selectedQuestions = fullQuestionPool.sort(() => 0.5 - Math.random()).slice(0, 10);
   let currentLang = 'zh';
   let currentQuestion = 0;
   let score = 0;
 
   const langToggle = document.getElementById('lang-toggle');
   const questionEl = document.getElementById('question');
   const optionsEl = document.getElementById('options');
   const resultEl = document.getElementById('result');
   const ctaBtn = document.getElementById('cta-button');
 
   langToggle.addEventListener('click', () => {
     currentLang = currentLang === 'zh' ? 'en' : 'zh';
     loadQuestion();
   });
 
   function loadQuestion() {
     // åœ¨é€™è£¡æ·»åŠ ä¸€å€‹ä¿è­·ï¼Œä»¥é˜² selectedQuestions æ˜¯ç©ºçš„æˆ–ä¸å¤ é•·
     if (selectedQuestions.length === 0 || !selectedQuestions[currentQuestion]) {
       console.error("Error: Question pool is empty or currentQuestion index is out of bounds.");
       // å¯ä»¥é¸æ“‡åœ¨é€™è£¡é¡¯ç¤ºä¸€å€‹éŒ¯èª¤è¨Šæ¯çµ¦ä½¿ç”¨è€…
       questionEl.textContent = currentLang === 'zh' ? 'é¡Œç›®è¼‰å…¥éŒ¯èª¤ï¼Œè«‹ç¨å¾Œå†è©¦ã€‚' : 'Error loading questions. Please try again later.';
       optionsEl.innerHTML = '';
       return;
     }
     const q = selectedQuestions[currentQuestion][currentLang];
     questionEl.textContent = `${currentQuestion + 1}. ${q.question}`;
     optionsEl.innerHTML = '';
     q.options.forEach((opt, idx) => {
       const btn = document.createElement('button');
       btn.textContent = opt;
       btn.onclick = () => selectAnswer(idx);
       optionsEl.appendChild(btn);
     });
   }
 
   function selectAnswer(index) {
     // åœ¨é€™è£¡æ·»åŠ ä¸€å€‹ä¿è­·
     if (selectedQuestions.length === 0 || !selectedQuestions[currentQuestion]) {
        console.error("Error: Question pool is empty or currentQuestion index is out of bounds during selectAnswer.");
        return;
     }
     const q = selectedQuestions[currentQuestion][currentLang];
     const explanation = document.createElement('p');
     explanation.style.marginTop = '0.5rem';
     explanation.style.fontStyle = 'italic';
 
     if (index === q.answer) {
       score++;
       explanation.textContent = currentLang === 'zh' ? 'âœ”ï¸ å›ç­”æ­£ç¢ºï¼' : 'âœ”ï¸ Correct answer!';
     } else {
       explanation.textContent = currentLang === 'zh' ? 'âŒ å›ç­”éŒ¯èª¤ã€‚' : 'âŒ Incorrect answer.';
     }
 
     const detail = document.createElement('p');
     detail.textContent = q.explanation;
     detail.style.marginTop = '0.2rem';
 
     optionsEl.innerHTML = '';
     optionsEl.appendChild(explanation);
     optionsEl.appendChild(detail);
 
     setTimeout(() => {
       currentQuestion++;
       if (currentQuestion < selectedQuestions.length) {
         loadQuestion();
       } else {
         showResult();
       }
     }, 2000); // æˆ‘ç¨å¾®å»¶é•·äº†ä¸€é»æ™‚é–“ (2ç§’)ï¼Œè®“ä½¿ç”¨è€…æœ‰æ™‚é–“çœ‹è§£é‡‹
   }
 
   function showResult() {
     let message = '';
     let overview = '';
     // åœ¨é€™è£¡æ·»åŠ ä¸€å€‹ä¿è­·
     if (selectedQuestions.length === 0 && currentLang === 'zh') {
        message = 'æ²’æœ‰é¡Œç›®å¯ä»¥é¡¯ç¤ºçµæœã€‚';
     } else if (selectedQuestions.length === 0 && currentLang === 'en') {
        message = 'No questions to show results for.';
     } else {
        selectedQuestions.forEach((qData, idx) => { // æ”¹ç”¨ qData é¿å…èˆ‡å¤–éƒ¨ q è¡çª
            // ç¢ºèª qData å’Œ qData[currentLang] æ˜¯å¦å­˜åœ¨
            if (qData && qData[currentLang]) {
                const qText = qData[currentLang].question;
                const correct = qData[currentLang].options[qData[currentLang].answer];
                overview += `\n${idx + 1}. ${qText}\nâœ” æ­£ç¢ºç­”æ¡ˆï¼š${correct}`;
            }
        });

        if (currentLang === 'zh') {
            if (score >= 8) message = `ğŸŒŸ ESGè¶…ç´šç©å®¶ï¼\nä½ çš„å¾—åˆ†æ˜¯ ${score} / ${selectedQuestions.length}`;
            else if (score >= 4) message = `ğŸ” ESGè§€å¯Ÿå®¶ï¼\nä½ çš„å¾—åˆ†æ˜¯ ${score} / ${selectedQuestions.length}`;
            else message = `ğŸŒ± ESGåˆå¿ƒè€…ï¼ŒåŠ æ²¹ï¼\nä½ çš„å¾—åˆ†æ˜¯ ${score} / ${selectedQuestions.length}`;
            ctaBtn.textContent = 'äº†è§£æ›´å¤šç¾¤å…‰é›»èƒ½æ°¸çºŒè¡Œå‹•';
        } else {
            if (score >= 8) message = `ğŸŒŸ ESG Super Player!\nYour score: ${score} / ${selectedQuestions.length}`;
            else if (score >= 4) message = `ğŸ” ESG Observer!\nYour score: ${score} / ${selectedQuestions.length}`;
            else message = `ğŸŒ± ESG Beginner, keep going!\nYour score: ${score} / ${selectedQuestions.length}`;
            ctaBtn.textContent = 'Learn more about Chicony Power Sustainability';
        }
     }
 
     resultEl.textContent = message + (overview ? "\n\n---\n" + overview : "");
     questionEl.textContent = '';
     optionsEl.innerHTML = '';
     ctaBtn.style.display = 'block';
   }
 
   loadQuestion();
 </script>
</body>
</html>
